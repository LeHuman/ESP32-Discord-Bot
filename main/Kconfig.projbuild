menu "ESP_BOT_CONFIG"

    config BOT_TOKEN
        string "Discord Bot API Token"
        default "BLANKITYBLANK"
        help
            Your discord bot token goes here

    config WEBSOCKET_BUFFER_SIZE
        int "Websocket buffer size"
        default 8192
        help
            Maximum size of the websocket message

    config WEBSOCKET_URI
        string "Websocket endpoint URI"
        default "wss://gateway.discord.gg/?v=6&encoding=json"
        help
            URL of websocket endpoint

    config WEBSOCKET_TIMEOUT_SEC
        int "Websocket no data timeout"
        default 10
        help
            The time it takes for the websocket to timeout when it is not receiving data

    config ESP_WIFI_SSID
        string "WiFi SSID"
        default "Riveria-Network"
        help
            SSID (network name) for the station to connect to.

    config ESP_WIFI_PASSWORD
        string "WiFi Password"
        default "FZvfm^##A!*g4fWB"
        help
            WiFi password (WPA or WPA2) for the station to use.

    config ESP_MAXIMUM_RETRY
        int "Maximum retry"
        default 5
        help
            Set the Maximum retry to avoid station reconnecting to the AP unlimited when the AP is really inexistent.

    config BLINK_GPIO
        int "Blink GPIO number"
        range 0 34
        default 2
        help
            GPIO number (IOxx) to blink on and off.

            Some GPIOs are used for other purposes (flash connections, etc.) and cannot be used to blink.

            GPIOs 35-39 are input-only so cannot be used as outputs.
endmenu
